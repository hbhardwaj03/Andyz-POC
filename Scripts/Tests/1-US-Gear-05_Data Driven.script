//declare test variables
global username
global password
global customerNum
global coType
global PO
global itemCode
global productQuantity
global DCAUser
global DCAPswrd

//initialize test variables
"DataStore".setGlobalsScript1

//declare data variables
global dataIndex
global custNum
global custPO
global tag
global delTerm
global delMeth
global style
global color

//initialize data line counter
put 2 into dataIndex

repeat forever
	
	//initialize data variables
	DataStore.setDataScript1 dataIndex
	
	//increment counter
	put dataIndex + 1 into dataIndex
	
	//break if no more data
	if custNum is empty then exit repeat
	
	logData
	
	"Flows/Application".login username, password
	
	(************** Order entry ***************)
	"Flows/OrderEntry".enterNewOrder custNum, coType, custPO
	put "Flows/OrderEntry".recordCONumber() into coNum
	"Flows/OrderEntry".enterProduct style

	(************** Exit *********************)
	Log "Exit AGS"
	"M3/Application".close

end repeat	
(*	
      (************** Scheduling ***************)
	"Flows/Scheduling".doScheduling coNum
	put "M3/PMS100".recordMO() into moNum
	
	(************** Picking ******************)
	"Flows/Picking".doPicking
	
	(************** Manufacturing *************)
	"Flows/ManufacturinPacking".doManufacturing moNum
	
	(************** Packing ******************)
	put "Flows/ManufacturingPacking".validatePacking(username,password,coNum) into delNum
	"Flows/Other".recordRun coNum, moNum, schedNum, delNum
	
	(************** Shipping *****************)
	"Flows/Shipping".doShipping delNum
	"Flows/Shipping".validateShipping coNum
	
	(************** Exit *********************)
	Log "Exit AGS"
	"M3/Application".close
end repeat
*)


to logData
	global dataIndex
	global custNum
	global custPO
	global tag
	global delTerm
	global delMeth
	global style
	global color
	Log dataIndex & " " & custNum & " " & custPO & " " & tag & " " & delTerm & " " & delMeth & " " & style & " " & color
end logData


